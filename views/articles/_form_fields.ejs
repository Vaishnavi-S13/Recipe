<div class="form-group">
  <label for="title">Title</label>
  <input required value="<%= article.title %>" type="text" name="title" id="title" class="form-control">
</div>
<div class="form-group">
  <label for="description">Ingredients</label>
  <textarea name="ingredients" id="description" class="form-control" rows="8"><%= article.ingredients %></textarea>
</div>
<div class="form-group">
  <label for="markdown">Preparation</label>
  <textarea required name="recipe" id="markdown" class="form-control" rows="12"><%= article.recipe %></textarea>
</div>

<a href="/" class="btn btn-secondary">Cancel</a>
<button type="submit" class="btn btn-primary">Save</button>
